<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@color/azul_splash"
    android:gravity="bottom"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/circulo_logo__2_"
        />

    <TextView
        android:id="@+id/txt_menuDes_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aprendix"
        android:fontFamily="@font/sansita"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/_15dp"
        android:layout_margin="3dp"/>

    <TextView
        android:id="@+id/txt_menuDes_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aprendix@gmail.com"
        android:textSize="@dimen/_15dp"
        android:fontFamily="@font/sansita"
        android:layout_marginBottom="@dimen/_15dp"/>


</LinearLayout>